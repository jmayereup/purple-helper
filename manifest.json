{
    "manifest_version": 3,
    "name": "Purple People's Reader Helper",
    "version": "1.1",
    "description": "Sends selected text to PurplePeoplesReader.com when clicked.",
    "permissions": [
        "contextMenus",
        "activeTab",
        "scripting",
        "clipboardWrite"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "16": "images/icon16.png",
        "32": "images/icon32.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    },
    "action" : {
        "default_icon": {
            "16": "images/icon16.png",
            "32": "images/icon32.png",
            "48": "images/icon48.png",
            "128": "images/icon128.png",
            "192": "images/icon192.png"
    }
    }
}